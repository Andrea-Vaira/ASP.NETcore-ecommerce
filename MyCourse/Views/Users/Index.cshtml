@model UsersViewModel

<h1>Lista Utenti</h1>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var user in Model.users.Results)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    

                    <a asp-action="Detail" asp-route-id="@user.Id">
                        <button class="btn btn-primary">Mosta Corsi</button>
                    </a>                     
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }     
    thead {
        margin-bottom: 10px;
    }
    tbody>tr:hover {
        background-color: #ddd;
    }
    tbody>tr>td {
        padding: 8px;
    }
    tbody>tr>td>a{
        padding: 8px;
    }
    tbody>tr>td:last-child {
        text-align: end;
    }
</style>
